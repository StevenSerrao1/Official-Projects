@model Project

@{
    ViewData["Title"] = "Delete Project";
}

<link rel="stylesheet" href="~/Stylesheets/admin-panel.css" />

<body class="admin-panel">
    <h2 class="admin-panel-title">Delete Project</h2>

    <div class="admin-panel-description">
        <p>Are you sure you want to delete this project?</p>
    </div>

    <!-- Display project details in a read-only format -->
    <div>
        <label><strong>Project Name:</strong></label>
        <p class="small-margin">@Model.Title</p>

        <label><strong>Description:</strong></label>
        <p class="small-margin">@Model.Description</p>

        <label><strong>Id:</strong></label>
        <p class="small-margin">@Model.ProjectId</p>
    </div>

    <form asp-controller="Admin" asp-action="DeleteProjectPost" method="post">
        <!-- Hidden input to pass the ProjectId -->
        <input type="hidden" name="id" value="@Model.ProjectId" />

        <!-- Submit button to confirm deletion -->
        <button type="submit" class="btn btn-danger">Confirm Delete</button>

        <!-- Cancel button to go back to the AdminPanel -->
        <a asp-controller="Admin" asp-action="AdminPanel" class="btn btn-secondary">Cancel</a>
    </form>

    <div class="super-margin"></div>
    <footer class="admin-footer">
        <p>Admin Panel Footer - All rights reserved</p>
    </footer>
</body>
