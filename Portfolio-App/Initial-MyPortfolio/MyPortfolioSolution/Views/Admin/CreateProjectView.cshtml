@model Project

@{
    ViewBag.Title = "Create Project";
}

<form method="post">
    <div>
        <label for="Title">Project Title:</label>
        <input asp-for="Title" id="Title" required />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div>
        <label for="Description">Description:</label>
        <textarea asp-for="Description" id="Description" required></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div>
        <label for="ProjectURL">Project URL:</label>
        <textarea asp-for="ProjectURL" id="ProjectURL" required></textarea>
        <span asp-validation-for="ProjectURL" class="text-danger"></span>
    </div>

    <div>
        <label for="GitHubRepoName">GitHub Repo:</label>
        <textarea asp-for="GitHubRepoName" id="GitHubRepoName" required></textarea>
        <span asp-validation-for="GitHubRepoName" class="text-danger"></span>
    </div>

    <!-- Images Section -->
    @for (int i = 0; i < Model.Images.Count; i++)
    {
        var image = Model.Images.ElementAt(i);
          <!-- Get the element at the index -->
        <div>
            <label for="ImageUrl@i">Image URL:</label>
            <input asp-for="Images[@i].ImageUrl" id="ImageUrl@i" value="@image.ImageUrl" required />
            <span asp-validation-for="Images[@i].ImageUrl" class="text-danger"></span>

            <label for="Caption@i">Caption:</label>
            <input asp-for="Images[@i].Caption" id="Caption@i" value="@image.Caption" />
            <span asp-validation-for="Images[@i].Caption" class="text-danger"></span>

            <label for="AltText@i">Alt Text:</label>
            <input asp-for="Images[@i].AltText" id="AltText@i" value="@image.AltText" />
            <span asp-validation-for="Images[@i].AltText" class="text-danger"></span>
        </div>
    }



    <button type="submit">Create Project</button>
</form>
